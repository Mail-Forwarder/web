<!DOCTYPE html>
<html>
    <% include ../partials/head.ejs %>
    <body>
        <% include ../partials/navbar.ejs %>

        <!-- Page content -->
        <div class="container">
            <!-- What are we container -->
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card-panel orange margin-top-3em">
                        <span class="white-text ">
                            <h5 class="center-align"><b><%= lang.sites.home.whatarewe.title %></b></h5>
                            <h2 class="flow-text"><%= lang.sites.home.whatarewe.text %></h2>
                        </span>
                    </div>
                </div>
            </div>
              <!-- Card: Advantages about our Service - Container -->
            <div class="card">
                <div class="col s12">
                    <div class="card-content orange margin-top-05em hoverable">
                        <span class="white-text">
                            <h5 class="center-align"><b><%= lang.sites.home.advantages.title %></b></h5>
                            <%= lang.sites.home.advantages.text %>
                            <wbr>
                        </span>
                          <!-- Headers of Content -->
                        <div class="card-tabs margin-top-1em">
                          <ul class="tabs tabs-fixed-width tabs-transparent">
                            <li class="tab"><a class="active" href="#domains"><%= lang.sites.home.advantages.domains.title %></a></li>
                            <li class="tab"><a href="#TOR"><%= lang.sites.home.advantages.TOR.title %></a></li>
                            <li class="tab"><a href="#PGP"><%= lang.sites.home.advantages.PGP.title %></a></li>
                            <li class="tab"><a href="#livesupport"><%= lang.sites.home.advantages.livesupport.title %></a></li>
                            <li class="tab"><a href="#langsupport"><%= lang.sites.home.advantages.langsupport.title %></a></li>
                            <li class="tab"><a href="#API"><%= lang.sites.home.advantages.API.title %></a></li>
                         </ul>
                        </div>
                        <br>
                          <!-- Content of the Card above -->
                        <div class="card-content white-text hoverable">
                          <div id="domains"><p class="flow-text"><%= lang.sites.home.advantages.domains.text %></p> </div>
                          <div id="TOR"><p class="flow-text"><%= lang.sites.home.advantages.TOR.text %></p> </div>
                          <div id="PGP"><p class="flow-text"><%= lang.sites.home.advantages.PGP.text %></p> </div>
                          <div id="livesupport"><p class="flow-text"><%= lang.sites.home.advantages.livesupport.text %></p> </div>
                          <div id="langsupport"><p class="flow-text"><%= lang.sites.home.advantages.langsupport.text %></p> </div>
                          <div id="API"><p class="flow-text"><%= lang.sites.home.advantages.API.text %></p> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% include ../partials/scripts.ejs %>
        <% include ../partials/footer.ejs %>
    </body>
</html>
