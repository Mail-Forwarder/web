<!DOCTYPE html>
<html>
    <% include ../../partials/head.ejs %>
    <body>
        <!-- Centered logo -->
        <center>
            <a href="/">
                <img src="/static/img/logo.png" alt="<%= lang.meta.name %> <%= lang.sites.panel.register.logo %>" width="200" height="200" />
            </a>
        </center>

        <!-- Page content -->
        <div class="container">
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card-panel grey lighten-4">
                        <!-- TODO: Change color of inputs when create-home is merged to master -->
                        <!-- TODO: Change action-url when user system is created -->
                        <form method="post" action="#" autocomplete="off">
                            <!-- Username textbox -->
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">perm_identity</i>
                                    <input id="username" type="text" name="username" required />
                                    <label for="username"><%= lang.sites.panel.register.textbox.username %></label>
                                </div>
                            </div>
                            <!-- E-mail textbox -->
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">email</i>
                                    <input id="email" type="email" name="email" required />
                                    <label for="email"><%= lang.sites.panel.register.textbox.email %></label>
                                </div>
                            </div>
                            <!-- Password textbox -->
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">fingerprint</i>
                                    <input id="password" type="password" name="password" required />
                                    <label for="password"><%= lang.sites.panel.register.textbox.password %></label>
                                </div>
                            </div>
                            <!-- Repeat password textbox -->
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">fingerprint</i>
                                    <input id="repeatpassword" type="password" name="repeatpassword" required />
                                    <label for="repeatpassword"><%= lang.sites.panel.register.textbox.repeatpassword %></label>
                                </div>
                            </div>
                            <!-- Log in link -->
                            <div class="row">
                                <span class="left">
                                    <a href="/panel/login"><%= lang.sites.panel.register.login %></a>
                                </span>
                            </div>
                            <!-- Submit button -->
                            <div class="row">
                                <button class="btn orange waves-effect waves-light" type="submit" name="submit">
                                    <%= lang.sites.panel.register.registerbtn %>
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <% include ../../partials/scripts.ejs %>
        <% include ../../partials/footer.ejs %>
    </body>
</html>
