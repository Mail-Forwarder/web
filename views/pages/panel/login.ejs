<!DOCTYPE html>
<html>
    <% include ../../partials/head.ejs %>
    <body>
        <!-- Centered logo -->
        <center>
            <a href="/">
                <img src="/static/img/logo.png" alt="<%= lang.meta.name %> <%= lang.sites.panel.login.logo %>" width="200" height="200" />
            </a>
        </center>

        <!-- Page content -->
        <div class="container">
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card-panel grey lighten-4">
                        <!-- TODO: Change color of inputs when create-home is merged to master -->
                        <!-- TODO: Change action-url when user system is created -->
                        <form method="post" action="#" autocomplete="off">
                            <!-- Username/E-Mail textbox -->
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">perm_identity</i>
                                    <input id="user" type="text" name="user" required />
                                    <label for="user"><%= lang.sites.panel.login.textbox.user %></label>
                                </div>
                            </div>
                            <!-- Password textbox -->
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">fingerprint</i>
                                    <input id="password" type="password" name="password" required />
                                    <label for="password"><%= lang.sites.panel.login.textbox.password %></label>
                                </div>
                            </div>
                            <!-- Register and reset password links -->
                            <div class="row">
                                <!-- Register -->
                                <span class="left">
                                    <a href="/panel/register"><%= lang.sites.panel.login.register %></a>
                                </span>
                                <!-- Reset password -->
                                <span class="right">
                                    <a href="/panel/resetpw/start"><%= lang.sites.panel.login.resetpw %></a>
                                </span>
                            </div>
                            <!-- Submit button -->
                            <div class="row">
                                <button class="btn orange waves-effect waves-light" type="submit" name="submit">
                                    <%= lang.sites.panel.login.loginbtn %>
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <% include ../../partials/scripts.ejs %>
        <% include ../../partials/footer.ejs %>
    </body>
</html>
